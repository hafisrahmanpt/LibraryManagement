@model LibraryManagement.Web.Models.AddMemberViewModel

<h1>Add Member </h1>

<form method="post">
<div class="mt-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Name"/>
        <span class="text-danger" asp-validation-for="Name"></span>
</div>

<div class="mt-3">
    <label class="form-label">Address</label>
    <input type="text" class="form-control" asp-for="Address" />
</div>

<div class="mt-3">
    <label class="form-label">Phone</label>
    <input type="text" class="form-control" asp-for="Phone" />
        <span class="text-danger" asp-validation-for="Phone"></span>
</div>

<div class="mt-3">
    <label class="form-label">Email</label>
    <input type="email" class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
</div>

<div class="mt-3">
    <label class="form-label">Password</label>
    <input type="text" class="form-control" asp-for="Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
</div>

<div class="mt-3">
    <input type="checkbox" class="form-check-input" id="Active" asp-for="Status" />
    <label class="form-check-label" for="Active">Active</label>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form> 