@{
}

@model LibraryManagement.Web.Models.Entities.Member

<h1>Edit Member </h1>

@if (Model is null)
{
    <p>No Member was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="MemberID" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" />
        </div>

        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Active" asp-for="Status" />
            <label class="form-check-label" for="Active">Active</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary" >Update</button>
        </div>
    </form>
}
