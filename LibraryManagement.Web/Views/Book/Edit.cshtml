
@{
}
@model LibraryManagement.Web.Models.Entities.Book

<h1>Edit Book </h1>
         @*The Html Code to the view of Editing books*@
<form method="post">
    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="BookID" />
    </div>

    <div class="mt-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="mt-3">
        <label class="form-label">Author</label>
        <input type="text" class="form-control" asp-for="Author" />
    </div>

    <div class="mt-3">
        <label class="form-label">Genre</label>
        <input type="text" class="form-control" asp-for="Genre" />
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Availability" asp-for="Availability" />
        <label class="form-check-label" for="Availability">Available</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>
