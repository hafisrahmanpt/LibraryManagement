@model LibraryManagement.Web.Models.AddBookvViewModel

<h1>Add Book </h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Author</label>
        <input type="text" class="form-control" asp-for="Author" />
        <span class="text-danger" asp-validation-for="Author"></span>
    </div>

    <div class="mt-3">
        <label class="form-label">Genre</label>
        <input type="text" class="form-control" asp-for="Genre" />
        <span class="text-danger" asp-validation-for="Genre"></span>
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Availability" asp-for="Availability" />
        <label class="form-check-label" for="Availability">Available</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form> 